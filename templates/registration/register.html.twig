{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
    <section class="container py-3 my-3">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4 bg bg-primary-subtle">
                <h2 class="text-center fst-italic">Inscription</h2>
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm.nom, {'attr':{'class':"form-control mt-2" }}) }}
                {{ form_widget(registrationForm.prenom, {'attr':{'class':"form-control mt-2" }}) }}
                {{ form_widget(registrationForm.username, {'attr':{'class':"form-control mt-2" }}) }}
                {{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
                {{ form_widget(registrationForm.telephone, {'attr':{'class':"form-control mt-2 fst-italic" }}) }}
                {{ form_widget(registrationForm.email, {'attr':{'class':"form-control mt-2 fst-italic" }}) }}
                {{ form_widget(registrationForm.adresse, {'attr':{'class':"form-control mt-2 fst-italic" }}) }}
                <div class="row mt-2">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.RGPDConsent) }}
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-sm btn-primary">M'inscrire</button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </section>
{% endblock %}
