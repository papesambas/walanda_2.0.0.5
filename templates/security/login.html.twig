{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}
    <section class="container py-4 my-3">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté(e) en tant que
                            <h5>{{ app.user.userIdentifier }}</h5>
                            <a href="{{ path('app_logout') }}">Me déconnecter</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Me connecter</h1>
                    <label class="mt-1" for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mt-1" autocomplete="username" required="required" autofocus="autofocus">
                        <label class="mt-1" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control mt-1" autocomplete="current-password" required="required">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="checkbox mb-3">
                                    <label class="mt-1">
                                        <input type="checkbox" name="_remember_me">
                                            Remember me
                                        </label>
                                        <a class="text-danger mt-3 ms-3" href="{{ path('app_forgotten_password') }}">
                                            Mot de passe oublié
                                        </a>
                                    </div>
                                    <button class="btn btn-sm btn-primary mt-1" type="submit">Me connecter</button>
                                </form>
                            </div>
                        </div>
                    </section>
                {% endblock %}
